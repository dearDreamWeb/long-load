{
  "name": "react-ts-vite-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "rimraf ./dist && tsc && vite build",
    "preview": "vite preview",
    "tailwind": "npx tailwindcss -i ./src/tailwindCss/input.css -o ./src/tailwindCss/output.css --watch",
    "lint": "npx --no -- lint-staged",
    "prepare": "husky install",
    "fix": "eslint src/**/*.*  --fix",
    "lint:style": "stylelint \"src/**/*.(less|scss|css)\"",
    "lint:style-fix": "stylelint \"src/**/*.(less|scss|css)\" --fix"
  },
  "dependencies": {
    "@pixi/filter-glow": "4.1.5",
    "@pixi/filter-shockwave": "4.1.5",
    "classnames": "^2.3.2",
    "daisyui": "^3.8.0",
    "disable-devtool": "^0.3.4",
    "eslint": "^8.25.0",
    "less": "^4.1.3",
    "mobx": "^6.9.0",
    "mobx-react": "^7.6.0",
    "nes.css.14x": "^1.0.1",
    "pixi.js": "6.5.9",
    "postcss-pxtorem": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-eslint": "^1.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@pixi/sound": "4.4.1",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-config": "^5.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitejs/plugin-react": "^2.1.0",
    "commitlint": "^17.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "postcss-less": "^6.0.0",
    "prettier": "^2.7.1",
    "react-router-config": "^5.1.1",
    "react-router-dom": "5.2.0",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.11.0",
    "stylelint": "^14.14.0",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-timer": "^1.3.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "eslint src --cache --fix",
      "git add ."
    ],
    "**/*.*.less": [
      "npm run lint:style-fix",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'git commit trigger husky pre-commit hook' ",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "volta": {
    "node": "16.20.0"
  }
}
